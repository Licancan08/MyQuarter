<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_Grey"
    tools:context="licancan.com.myquarter.activity.SettingsActivity">
    <RelativeLayout
        android:id="@+id/setting_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTopColor">

        <TextView
            android:id="@+id/setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:drawableLeft="@drawable/iv_back"
            android:textColor="@color/TextWhite"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/TextWhite"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:gravity="center"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/setting_top"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/setting_Grey">
    </View>
    <RelativeLayout
        android:background="@color/TextWhite"
        android:padding="10dp"
        android:id="@+id/layout1"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/SettingText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.1.1"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textSize="16sp"
            android:textColor="@color/SettingText"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/setting_Grey"
        />
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:background="@color/TextWhite"
        android:padding="10dp"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/SettingText"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View

        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/setting_Grey"
        />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@color/TextWhite"
        android:padding="10dp"
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于一刻钟"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/SettingText"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_below="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/setting_Grey"
        />
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:background="@color/TextWhite"
        android:padding="10dp"
        android:id="@+id/layout4"
        android:layout_below="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/SettingText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="128M"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textSize="16sp"
            android:textColor="@color/SettingText"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:layout_marginTop="25dp"
        android:layout_below="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="退出登录"
        android:textSize="18sp"

        android:background="@drawable/orange_button"
        android:textColor="@color/TextWhite"/>
</RelativeLayout>

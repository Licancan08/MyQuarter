<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y220">
       <com.meg7.widget.CustomShapeImageView
           android:id="@+id/iv_myImg"
           android:layout_width="@dimen/x120"
           android:layout_height="@dimen/x120"
           android:layout_centerVertical="true"
           android:layout_marginLeft="@dimen/x30"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/x180"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y200"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginTop="@dimen/y10"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_marginTop="@dimen/y100"
                android:textSize="15sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_open"
            android:layout_marginRight="@dimen/x30"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_marginTop="@dimen/y50"
            android:layout_alignParentRight="true"
            android:src="@drawable/jia"/>
        <LinearLayout
            android:id="@+id/layout_1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_guanzhu"
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:src="@drawable/xin"/>
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3232"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:src="@drawable/fen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="767"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <ImageView
                android:layout_marginRight="@dimen/x30"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:src="@drawable/xiao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="454"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/layout"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/item_xRecyclerView"
        android:layout_below="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
    <View
        android:layout_below="@+id/item_xRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/hintColor"/>
</RelativeLayout>

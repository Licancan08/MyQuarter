<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mi"
    tools:context="licancan.com.myquarter.activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/forget_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/iv_back"/>
        <TextView
            android:id="@+id/for_already_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/TextStyle"/>
    </RelativeLayout>

    <com.bwie.aizhonghui.criclecustom.CircleRoundImageView
        android:layout_width="@dimen/x205"
        android:layout_height="@dimen/y180"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y130"
        app:circle="false"
        app:radius="10dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y360"
        android:layout_width="@dimen/x630"
        android:background="@drawable/layout"
        android:layout_height="@dimen/y180">
        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/x600"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/a"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/hintColor"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/y10"
                android:text="86+ |"/>
            <EditText
                android:layout_toRightOf="@+id/a"
                android:id="@+id/et_name"
                android:layout_width="@dimen/x270"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_margin="8dp"
                android:textColorHint="@color/hintColor"
                android:textSize="15sp"
                android:hint="请输入手机号"/>
            <TextView
                android:layout_marginTop="@dimen/y10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_centerVertical="true"
                android:textColor="@color/hintColor"
                android:layout_marginRight="@dimen/x20"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_below="@+id/layout"
            android:layout_width="@dimen/x595"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y12"
            android:layout_centerHorizontal="true"
            android:background="@color/view"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_below="@+id/view"
            android:layout_width="@dimen/x600"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:textSize="15sp"
            android:background="@null"
            android:textColorHint="@color/hintColor"
            android:hint="请输入验证码"/>

    </RelativeLayout>

    <Button
        android:id="@+id/but_next"
        android:layout_width="@dimen/x450"
        android:layout_height="@dimen/y80"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="@dimen/y90"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="下一步"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/TextWhite" />

    <TextView
        android:id="@+id/for_oneylogin"
        android:layout_marginTop="@dimen/y80"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/but_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textSize="16sp"
        android:textColor="@color/TextStyle"
        />

</RelativeLayout>

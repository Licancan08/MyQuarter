<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mi"
    tools:context="licancan.com.myquarter.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/for_two_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/iv_back"/>
        <TextView
            android:id="@+id/fortwo_already_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/TextStyle"/>
    </RelativeLayout>

    <com.bwie.aizhonghui.criclecustom.CircleRoundImageView
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:circle="false"
        app:radius="10dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_width="280dp"
        android:background="@drawable/layout"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textColorHint="@color/hintColor"
            android:hint="输入大小写和数字，密码不能超过8位"/>
        <View
            android:id="@+id/view"
            android:layout_below="@+id/et_name"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/view"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_below="@+id/view"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:background="@null"
            android:textColorHint="@color/hintColor"
            android:hint="请再次输入密码"/>

    </RelativeLayout>

    <Button
        android:id="@+id/success"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="30dp"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="完成"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/TextWhite" />

    <TextView
        android:id="@+id/fortwo_onlylogin"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textSize="16sp"
        android:textColor="@color/TextStyle"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mi"
    tools:context="licancan.com.myquarter.activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/iv_back"/>
        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/TextStyle"/>
    </RelativeLayout>

    <com.bwie.aizhonghui.criclecustom.CircleRoundImageView
        android:layout_width="@dimen/x205"
        android:layout_height="@dimen/y180"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y130"
        app:circle="false"
        app:radius="10dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y360"
        android:layout_width="@dimen/x570"
        android:background="@drawable/layout"
        android:layout_height="@dimen/y170">
        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="@dimen/x550"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            android:textSize="15sp"
            android:textColorHint="@color/hintColor"
            android:hint="账号"/>
        <View
            android:id="@+id/view"
            android:layout_below="@+id/et_mobile"
            android:layout_width="245dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/view"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_below="@+id/view"
            android:layout_width="@dimen/x550"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:background="@null"
            android:textSize="15sp"
            android:textColorHint="@color/hintColor"
            android:hint="密码"/>

    </RelativeLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/y520"
        android:layout_height="@dimen/y85"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="@dimen/y60"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:text="登录"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/TextWhite" />
    <TextView
        android:id="@+id/forget_pwd"
        android:layout_below="@+id/login_button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="16sp"
        android:textColor="@color/TextStyle"
         />
    <TextView
        android:id="@+id/login_in"
        android:layout_marginTop="@dimen/y100"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textSize="16sp"
        android:textColor="@color/TextStyle"
        />

</RelativeLayout>
